{
  "short_name": "Tab-Finder",
  "name": "Tab-Finder",
  "description": "A simple browser extension to help you manage open tabs.",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open Tab-Finder",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "fonts/Inter-Light.woff",
    "fonts/Inter-Medium.woff",
    "fonts/Inter-Bold.woff",
    "fonts/Inter-Light.woff2",
    "fonts/Inter-Medium.woff2",
    "fonts/Inter-Bold.woff2"
  ],
  "permissions": ["tabs"],
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
