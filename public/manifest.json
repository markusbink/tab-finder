{
  "short_name": "Tab-Finder",
  "name": "Tab-Finder",
  "description": "A simple browser extension to help you manage open tabs.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Tab-Finder",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/Inter-Light.woff",
        "fonts/Inter-Medium.woff",
        "fonts/Inter-Bold.woff",
        "fonts/Inter-Light.woff2",
        "fonts/Inter-Medium.woff2",
        "fonts/Inter-Bold.woff2"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["tabs"]
}
